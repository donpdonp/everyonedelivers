<div id="usermenu">
<ul>
  <li>
    <%= link_to 'Profile', user_path(user, {:tab => 'profile'}) %>
    <% if @user.available_for_edit_by(current_user) %>
     (<%= link_to "edit", edit_user_path(@user) %>)
    <% end %>
  </li>
  <li>
    <%= link_to 'Deliveries', user_path(user, {:tab => 'deliveries'}) %>
  </li>
  <li>
    <%= link_to 'Location', user_path(user, {:tab => 'location'}) %>
  </li>
  <% if user_signed_in? %>
  <li>
    <%= link_to 'Billing', user_path(user, {:tab => 'billing'}) %>
  </li>
  <% end %>
</ul>
</div>
