<% tab = params[:tab] || 'profile' %>
<% content_for :title do %>
User <%= @user.username %>
<% end %>
<div id="usershow">
<h3> 
  User Profile for <%= @user.username %> 
  <% if @user.available_for_edit_by(current_user) %>
   <%= link_to "edit", {:controller => :users, :action => :edit, :id => @user.username, :tab => tab} %>
  <% end %>
</h3>

<%= render :partial => 'menu', :locals => {:user => @user} %>

<%= render :partial => tab, :locals => {:user => @user} %>
</div>
